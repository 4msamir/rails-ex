{
  "kind": "Template",
  "apiVersion": "v1",
  "metadata": {
    "name": "rails-example",
    "annotations": {
      "description": "A simple Ruby on RailsÂ® blog application (no DB).",
      "iconClass": "icon-ruby",
      "tags": "instant-app,ruby,rails"
    }
  },
  "objects": [
    {
      "kind": "Service",
      "apiVersion": "v1",
      "metadata": {
        "name": "frontend"
      },
      "spec": {
        "ports": [
          {
            "name": "web",
            "port": 5432,
            "targetPort": 8080
          }
        ],
        "selector": {
          "name": "frontend"
        }
      }
    },
    {
      "kind": "Route",
      "apiVersion": "v1",
      "metadata": {
          "name": "${FRONTEND_ROUTE}"
      },
      "spec": {
          "host" : "${FRONTEND_ROUTE}",
          "to": {
              "kind" : "Service",
              "name" : "frontend"
          }
      }
    },
    {
      "kind": "ImageStream",
      "apiVersion": "v1",
      "metadata": {
        "name": "origin-rails-blog"
      }
    },
    {
      "kind": "ImageStream",
      "apiVersion": "v1",
      "metadata": {
        "name": "ruby-20-centos7"
      },
      "spec": {
        "dockerImageRepository": "openshift/ruby-20-centos7"
      }
    },
    {
      "kind": "BuildConfig",
      "apiVersion": "v1",
      "metadata": {
        "name": "rails-blog",
        "labels": {
          "name": "rails-blog"
        }
      },
      "spec": {
        "triggers": [
          {
            "type": "GitHub",
            "github": {
              "secret": "secret101"
            }
          },
          {
            "type": "Generic",
            "generic": {
              "secret": "secret101"
            }
          },
          {
            "type": "ImageChange"
          }
        ],
        "source": {
          "type": "Git",
          "git": {
            "uri": "${GITHUB_URL}"
          }
        },
        "strategy": {
          "type": "Source",
          "sourceStrategy": {
            "from": {
              "kind": "DockerImage",
              "name": "openshift/ruby-20-centos7:latest"
            },
            "incremental": true
          }
        },
        "output": {
          "to": {
            "kind": "ImageStreamTag",
            "name": "origin-rails-blog:latest"
          }
        }
      }
    },
    {
      "kind": "DeploymentConfig",
      "apiVersion": "v1",
      "metadata": {
        "name": "frontend"
      },
      "spec": {
        "strategy": {
          "type": "Rolling",
          "rollingParams": {
            "updatePeriodSeconds": 1,
            "intervalSeconds": 1,
            "timeoutSeconds": 120
          }
        },
        "triggers": [
          {
            "type": "ImageChange",
            "imageChangeParams": {
              "automatic": true,
              "containerNames": [
                "rails-blog"
              ],
              "from": {
                "name": "origin-rails-blog:latest"
              }
            }
          }
        ],
        "replicas": 1,
        "selector": {
          "name": "frontend"
        },
        "template": {
          "metadata": {
            "labels": {
              "name": "frontend"
            }
          },
          "spec": {
            "containers": [
              {
                "name": "rails-blog",
                "image": "origin-rails-blog",
                "ports": [
                  {
                    "containerPort": 8080
                  }
                ]
              }
            ]
          }
        }
      }
    }
  ],
  "parameters": [
    {
      "name": "GITHUB_URL",
      "description": "The URL with your Rails application source code.",
      "value": "git://github.com/ewolinetz/ruby-rails-example.git"
    },
    {
      "name": "SECRET_KEY_BASE",
      "description": "Your secret key for verifying the integrity of signed cookies.",
      "generate": "expression",
      "from": "[a-z0-9]{127}"
    },
    {
      "name": "FRONTEND_ROUTE",
      "description": "The exposed hostname that will route Rails frontend service.",
      "value": "rails-frontend.apps"
    }
  ],
  "labels": {
    "template": "rails-example"
  }
}
